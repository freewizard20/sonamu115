<!DOCTYPE html>
<html>
	<head>
		<%- include('parts/header') %>
	</head>
	<body oncontextmenu='return false' onselectstart='return false' ondragstart='return false'>
		<%- include('parts/mlogoarea') %>
		<div class="mobile_titlebar">
			<% if(data.title==='') { %>
				매물정보
			<% } else { %>
				<%= data.title %>
			<% } %>
		</div>
		<div class="item_address"><%= data.address_si %> <%= data.address_gun %> <%= data.address_up %></div>
		<table class="item_table">
			<tr>
				<td class="item_label2">가격</td>
				<td class="item_value2 red bold">
					<% if(data.price_sell !=0) { %>
						매매가 :
						<% if(data.price_sell>=10000) { %>
							<%= Math.floor(data.price_sell/10000)%>억<% if(data.price_sell%10000!=0) { %><%= data.price_sell%10000 %>만<% } %>
						<% } else { %>
							<%= data.price_sell %>만
						<% } %>
					<% } else if (data.price_jeondeposit != 0) { %>
						전세보증금 :
						<% if(data.price_jeondeposit>=10000) { %>
							<%= Math.floor(data.price_jeondeposit/10000)%>억<% if(data.price_jeondeposit%10000!=0) { %><%= data.price_jeondeposit%10000 %>만<% } %>
						<% } else { %>
							<%= data.price_jeondeposit %>만
						<% } %>
						<% if(data.price_borrow != 0) { %>
						/ 융자가 :
						<% if(data.price_borrow>=10000) { %>
							<%= Math.floor(data.price_borrow/10000)%>억<% if(data.price_borrow%10000!=0) { %><%= data.price_borrow%10000 %>만<% } %>
						<% } else { %>
							<%= data.price_borrow %>만
						<% } %>
						<% } %>
					<% } else { %>
						보증금 :
						<% if(data.price_rentdeposit>=10000) { %>
							<%= Math.floor(data.price_rentdeposit/10000)%>억<% if(data.price_rentdeposit%10000!=0) { %><%= data.price_rentdeposit%10000 %>만<% } %>
						<% } else { %>
							<%= data.price_rentdeposit %>만
						<% } %>
						/ 월세 : <%= data.price_rent %>만
					<% } %>
				</td>
			</tr>
			<tr>
				<td class="item_label2">진행사항</td>
				<td class="item_value2 bold">
					<% if(data.contract === 'on') { %>
						<span style="color:green;">계약가능</span>
					<% } else if(data.contract ==='pending') { %>
						<span style="color:black;">계약보류</span>
					<% } else { %>
						<span style="color: red;">계약완료</span>
					<% } %>
				</td>
				</tr><tr>
				<td class="item_label2">매물번호</td>
				<td class="item_value2"><span style="color:red;font-weight:bold;"><%= data.id %></span></td>
			</tr>
			<tr>
				<td class="item_label2">면적</td>
				<td class="item_value2">대지면적: <%= Math.floor(data.area_ground2) %>㎡(<%= Math.floor(data.area_ground) %>평)
				<% if(data.area_building != 0) { %>
				 / 건물면적: <%= Math.floor(data.area_building2) %>㎡(<%= Math.floor(data.area_building) %>평)
				<% } %>
				</td>
			</tr><tr>
				<td class="item_label2">방/욕실</td>
				<td class="item_value2"><%= data.area_rooms %> / <%= data.area_toilets %></td>
			</tr>
			<tr>
				<td class="item_label2">건축구조</td>
				<td class="item_value2"><%= data.area_recommended %></td>
			</tr><tr>
				<td class="item_label2">난방</td>
				<td class="item_value2"><%= data.detail_temperature %></td>
			</tr>
			<tr>
				<td class="item_label2">준공년도</td>
				<td class="item_value2"><%= data.detail_date %></td>
			</tr><tr>
				<td class="item_label2">방향</td>
				<td class="item_value2"><%= data.detail_orientation %></td>
			</tr>
			<tr>
				<td class="item_label2">담당자</td>
				<td class="item_value2 bold" id="user_name"><%= data.user %></td>
			</tr><tr>
				<td class="item_label2">연락처</td>
				<td class="item_value2 bold" id="user_contact">031-773-5900 / 010-5670-4530</td>
			</tr>
		</table>
		<div class="mobile_titlebar">
			상세정보
		</div>
		<div class="item_detail_text" id="target">
			<%= data.detail %>
		</div>
		<div class="mitem_images">
			<% for(let i = 0 ; i < data.image.length ; i++) { %>
				<img style="max-width: 100%" src="images<%= data.image[i] %>">
			<% } %>
		</div>
		<footer>
			<%- include('parts/footer') %>
		</footer>
		<script>
			let target = document.getElementById('target');
			target.innerHTML = target.innerHTML.replace(/#8203;/gi,'').replace(/&gt;/gi,'>').replace(/&lt;/gi,'<').replace(/&amp;/gi,'').replace(/amp;/gi,'');
			let user = document.getElementById('user_name').innerHTML;
			if(user==='admin'){
				document.getElementById('user_name').innerHTML = '공인중개사 최재성';
				document.getElementById('user_contact').innerHTML = '031-773-5900 / 010-5265-4181';
			}else{
				document.getElementById('user_name').innerHTML = '공인중개사 최기혁';
				document.getElementById('user_contact').innerHTML = '031-773-5900 / 010-5670-4530';
			}
		</script>
	</body>
</html>
